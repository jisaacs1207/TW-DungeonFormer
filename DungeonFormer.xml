<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <!-- Main Addon Frame -->
    <Frame name="DungeonFormerFrame" parent="UIParent" movable="true" enableMouse="true" hidden="true">
        <Size x="400" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>

        <!-- Title -->
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontNormal" text="DungeonFormer">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP">
                            <Offset x="0" y="-18"/>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!-- Close Button -->
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
                        <Offset x="-5" y="-5"/>
                    </Anchor>
                </Anchors>
            </Button>

            <!-- Dungeon Dropdown -->
            <Frame name="DungeonFormerDungeonDropdown" inherits="UIDropDownMenuTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="20" y="-40"/>
                </Anchors>
            </Frame>

            <!-- Class Filter Label -->
            <FontString name="$parentClassFilterLabel" inherits="GameFontNormalSmall" text="Classes (comma separated):"></FontString>

            <!-- Class Filter EditBox -->
            <EditBox name="DungeonFormerClassFilter" inherits="InputBoxTemplate" autoFocus="false">
                <Size x="150" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="DungeonFormerDungeonDropdown" relativePoint="BOTTOMLEFT" x="0" y="-15"/>
                </Anchors>
                <Scripts>
                    <OnEscapePressed>
                        this:ClearFocus();
                    </OnEscapePressed>
                </Scripts>
            </EditBox>

            <!-- Scan Button -->
            <Button name="DungeonFormerScanButton" inherits="UIPanelButtonTemplate" text="Scan">
                <Size x="80" y="22"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="DungeonFormerClassFilter" relativePoint="RIGHT" x="10" y="0"/>
                </Anchors>
            </Button>

            <!-- Results ScrollFrame -->
            <ScrollFrame name="DungeonFormerScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size>
                    <AbsDimension x="380" y="300"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="DungeonFormerFrame" relativePoint="TOPLEFT">
                        <Offset>
                            <AbsDimension x="10" y="-110"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <ScrollChild>
                    <Frame name="DungeonFormerScrollChild">
                        <Size>
                            <AbsDimension x="360" y="300"/>
                        </Size>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>

            <!-- Settings Checkboxes -->
            <CheckButton name="DungeonFormerAutoInviteCheck" inherits="UICheckButtonTemplate">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="DungeonFormerScrollFrame" relativePoint="BOTTOMLEFT" x="10" y="-10"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        _G[this:GetName() .. "Text"]:SetText("Auto-Invite");
                    </OnLoad>
                </Scripts>
            </CheckButton>

            <CheckButton name="DungeonFormerVerboseCheck" inherits="UICheckButtonTemplate">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="DungeonFormerAutoInviteCheck" relativePoint="RIGHT" x="100" y="0"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        _G[this:GetName() .. "Text"]:SetText("Verbose Mode");
                    </OnLoad>
                </Scripts>
            </CheckButton>

        </Frames>

        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>
